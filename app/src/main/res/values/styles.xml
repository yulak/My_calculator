<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CaclcButtonNumberStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/calc_button_height</item>
        <item name="android:layout_marginStart">@dimen/default_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/default_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_bottom</item>
        <item name="android:backgroundTint">@color/color_button</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">@dimen/button_style_radius</item>
        <!--<item name="rippleColor">@color/black</item>--> //для черной темы
    </style>

    <style name="ButtonRightColumn">
        <item name="android:layout_width">@dimen/button_right_column_width</item>
        <item name="android:layout_height">@dimen/button_right_column_height</item>
        <item name="android:layout_marginStart">@dimen/default_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/default_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_bottom</item>
        <item name="android:backgroundTint">@color/color_button</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">@dimen/button_style_radius</item>
        <!--<item name="rippleColor">@color/black</item>--> //для черной темы
    </style>

    <style name="ImageViewBackground">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/graphite_board</item>
    </style>

    <style name="TextViewEquation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_view_equation_height</item>
        <item name="android:layout_marginStart">@dimen/default_text_view_start</item>
        <item name="android:layout_marginTop">@dimen/default_text_view_top</item>
        <item name="android:layout_marginEnd">@dimen/default_text_view_end</item>
        <item name="android:layout_marginBottom">@dimen/default_text_view_bottom</item>
        <item name="android:textSize">@dimen/equation_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewAnswer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/text_view_answer_height</item>
    <item name="android:layout_marginStart">@dimen/default_text_view_start</item>
    <item name="android:layout_marginTop">@dimen/default_text_view_top</item>
    <item name="android:layout_marginEnd">@dimen/default_text_view_end</item>
    <item name="android:layout_marginBottom">@dimen/default_text_view_bottom</item>
    <item name="android:textSize">@dimen/answer_text_size</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">end</item>
</style>

</resources>